# Environment Configuration for Legal Assistant GenAI

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ACCESS_TOKEN_EXPIRE_HOURS=24

# Database Configuration
DATABASE_URL=postgresql://legal_user:legal_password@localhost:5432/legal_assistant_db
REDIS_URL=redis://localhost:6379/0

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLAMA_API_KEY=your-llama-api-key

# Document Processing
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/app/data/uploads
PROCESSED_DIR=/app/data/processed

# OCR Services
GOOGLE_VISION_CREDENTIALS=path/to/google-vision-credentials.json
AZURE_FORM_RECOGNIZER_KEY=your-azure-form-recognizer-key
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-region.api.cognitive.microsoft.com/

# DocuSign Integration
DOCUSIGN_INTEGRATION_KEY=your-docusign-integration-key
DOCUSIGN_USER_ID=your-docusign-user-id
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id
DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi

# Microsoft 365 Integration
MICROSOFT_CLIENT_ID=your-microsoft-app-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-app-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id

# Google Workspace Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Monitoring and Observability
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_ENABLED=true

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501", "https://your-domain.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=100

# Voice Services
SPEECH_RECOGNITION_SERVICE=google
TEXT_TO_SPEECH_SERVICE=google

# Analytics
ANALYTICS_RETENTION_DAYS=365

# Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555